
<div class="blog-post">
  <div class="panel panel-default">
    <div class="panel-body">
      <h2 class="blog-post-title" ><%= @post.title%></h2>
      <p class="blog-post-meta"><%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S")%> by <a href="#">Gavin</a></p>

      <p><%#= sanitize @post.content %></p>
      <p><%= raw @post.content %></p>
      <%= link_to '返回列表' , controller: 'posts', class:'btn btn-default' %>
    </div>
  </div>
</div>

